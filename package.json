{
	"name": "stylelint-config-hudochenkov",
	"version": "12.0.0",
	"description": "My Stylelint config",
	"main": "index.js",
	"files": [
		"full.js",
		"index.js",
		"limit-language-features.js",
		"order.js",
		"possible-errors.js",
		"stylistic-issues.js"
	],
	"scripts": {
		"prettier-check": "prettier '**/*.js' --check",
		"lint": "eslint . --max-warnings=0 && npm run prettier-check",
		"fix": "eslint . --fix --max-warnings=0 && prettier '**/*.js' --write",
		"test": "stylelint test.css --max-warnings 0 --config full.js",
		"prepare": "husky"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/hudochenkov/stylelint-config-hudochenkov.git"
	},
	"author": "Aleks Hudochenkov <aleks@hudochenkov.com> (https://hudochenkov.com)",
	"license": "MIT",
	"prettier": "prettier-config-hudochenkov",
	"peerDependencies": {
		"stylelint": "^16.19.0 || ^17.0.0",
		"stylelint-order": "^7.0.1"
	},
	"devDependencies": {
		"eslint": "^9.39.2",
		"eslint-config-hudochenkov": "^13.0.0",
		"eslint-config-prettier": "^10.1.8",
		"globals": "^17.0.0",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.7",
		"prettier": "^3.8.0",
		"prettier-config-hudochenkov": "^0.4.0",
		"stylelint": "^17.0.0",
		"stylelint-order": "^7.0.1"
	},
	"lint-staged": {
		"*.js": [
			"eslint --fix --max-warnings=0",
			"prettier --write"
		]
	}
}
